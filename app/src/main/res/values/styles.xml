<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarTheme">@style/ActionBarTheme</item>
    </style>

    <!--  Action Bar  -->
    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/dark_sky_blue</item>
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="android:actionMenuTextColor">@color/dark_sky_blue</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColorPrimary">@color/greyish_brown</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
